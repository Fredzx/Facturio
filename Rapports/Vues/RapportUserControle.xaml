<UserControl x:Class="Facturio.Rapports.Vues.RapportUserControle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Local="clr-namespace:Facturio.Rapports.Vues"
             xmlns:Local1="clr-namespace:Facturio.Rapports.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="900">
    <Grid>
        <TabControl x:Name="tbcRapport">
            <TabItem x:Name="tbiListerRapport"  Header="Mes Rapports">
                <Local:ListeRapportUserControl/>

            </TabItem>
            <TabItem Header="Sommaire">
                <Local:Sommaire/>
            </TabItem>
            <TabItem Header="Facturation Cliente">
                <Local:FacturationCliente/>
            </TabItem>
            <TabItem Header="Facturation Produit">
                <Local:VenteProduit/>
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>
