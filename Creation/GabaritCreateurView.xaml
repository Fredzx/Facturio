<UserControl x:Class="Facturio.Creation.GabaritCreateurView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:creation="clr-namespace:Facturio.Creation"
             mc:Ignorable="d">
    <!-- DataContext -->
    <UserControl.DataContext>
        <creation:GabaritCreateurViewModel />
    </UserControl.DataContext>

    <!-- Styles spécifiques aux éléments de ce UserControl -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Critères" Margin="10, 5, 5, 5" Padding="10">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="CheckBox">
                        <Setter Property="Margin" Value="0, 0, 0, 6" />
                    </Style>
                </StackPanel.Resources>
                
                <CheckBox Content="Code" />
                <CheckBox Content="Nom" />
                <CheckBox Content="Description" />
                <CheckBox Content="Prix" />
                <CheckBox Content="Quantité" />
                <CheckBox Content="Prénom du client" />
                <CheckBox Content="Nom du client" />
                <CheckBox Content="Adresse du client" />
                <CheckBox Content="Code postal du client" />
                <CheckBox Content="Escompte" />
                <CheckBox Content="Nombre d'heures" />
                <CheckBox Content="Taux horaire" />

                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                    <TextBox Width="150" VerticalContentAlignment="Center" Padding="2, 0, 0, 0" />
                    <Button Content="Ajouter" DockPanel.Dock="Right" Margin="8, 0, 0, 0" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- <GridSplitter Grid.Column="1" Background="DimGray" Width="1" Panel.ZIndex="1" /> -->

        <GroupBox Header="Aperçu du gabarit de facture" Grid.Column="2" Margin="5, 5, 10, 5" Padding="10">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="0, 8, 0, 0">
                    <Button Content="Enregistrer" />
                    <Button Content="Ouvrir" Margin="8, 0, 0, 0"/>
                </StackPanel>
                <DataGrid AutoGenerateColumns="False" Margin="0, 5, 0, 5"></DataGrid>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>

