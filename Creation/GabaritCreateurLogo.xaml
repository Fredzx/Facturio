<UserControl x:Class="Facturio.Creation.GabaritCreateurLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Facturio.Creation"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"  />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="8" />
            <RowDefinition Height="12"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>


        <Label Name="lblTitreFacture" Grid.Column="1" Grid.Row="1" Content="Titre de la facture"/>
        <TextBox Name="txtTitreFacture" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" />

        <Image Name="imgLogo" Grid.Column="3" Grid.Row="0" Grid.RowSpan="3"/>


        <Button Name="btnImporterLogo" Grid.Column="1" Grid.Row="2" Content="Importer un logo ..." Click="btnImporterLogo_Click" />
        <Label Name="lblLogo" Grid.Column="2" Grid.Row="2" />


        <Grid Background="LightBlue" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3"/>

        <Button Name="btnEnregistrer" Grid.Column="2" Grid.Row="7" Content="Enregistrer" Width="150" Height="30" Margin="35,0" VerticalAlignment="Top" Click="btnEnregistrer_Click" />
        <Button Name="btnOuvrir" Grid.Column="3" Grid.Row="7" Content="Ouvrir" Width="150" Click="btnOuvrir_Click" Margin="35,0" />


    </Grid>
</UserControl>
