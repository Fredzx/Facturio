<UserControl x:Class="Facturio.Clients.ClientsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Facturio.Clients"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <UserControl>
            <TabControl>
                <TabItem Header="Rechercher">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="2" />

                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="4">
                            <TextBox Name="txtRecherche" Height="20" Width="400" />
                        </Grid>
                        <Grid Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="4"
                          Grid.RowSpan="4">
                            <DataGrid Name="dtgAfficheClients" LoadingRow="DataGrid_LoadingRow" 
                                      BorderBrush="Black" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="No. Client" Width="5*" Binding="{Binding NoClient}"   />
                                    <DataGridTextColumn Header="Nom" Width="4*" Binding="{Binding Nom}"  />
                                    <DataGridTextColumn Header="Prénom" Width="4*" Binding="{Binding Prenom}" />
                                    <DataGridTextColumn Header="Sexe" Width="3*" Binding="{Binding Sexe}"/>
                                    <DataGridTextColumn Header="Téléphone" Width="5*" Binding="{Binding Telephone}" />
                                    <DataGridTextColumn Header="Description" Width="5*" Binding="{Binding Description}"/>
                                    <DataGridTextColumn Header="Adresse" Width="5*" Binding="{Binding Adresse}"/>
                                    <DataGridTextColumn Header="Code postal" Width="5*" />
                                    <DataGridTextColumn Header="Escompte" Width="5*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <StackPanel Grid.Row="4"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Grid.ColumnSpan="4">


                            <Button Content="Ajouter" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" />
                            <Button Content="Modifier" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" />
                            <Button Content="Supprimer" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Ajouter/Modifer">

                </TabItem>

            </TabControl>
        </UserControl>
    </Grid>
</UserControl>
