<UserControl x:Class="Facturio.Clients.ClientsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Facturio.Clients"
             xmlns:ucClients="clr-namespace:Facturio.Clients"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <TabControl Name="tbcClient" SelectionChanged="tbcClient_SelectionChanged">
            <TabItem Name="tbiRechercher" Header="Rechercher" >
                <ucClients:RechercherUserControl />
            </TabItem>
            <TabItem Name="tbiAjoutModif" Header="Ajouter/Modifer" >
                <ucClients:AjoutModifUserControl />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

