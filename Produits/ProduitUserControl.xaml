<UserControl x:Class="Facturio.Produits.ProduitUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Facturio.Produits"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl x:Name="tbcProduit" SelectionChanged="tbcProduit_SelectionChanged">
            <TabItem x:Name="tbiRechercherProduit" Header="Rechercher">
                <local:RechercherUserControl/>
            </TabItem>
            <TabItem x:Name="tbiAjouterModifierProduit" Header="Ajouter/Modifier">
                <local:AjoutModifUserControl/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
